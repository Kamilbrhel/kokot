<?php
session_start();

if (!isset($_SESSION["balance"])) {
    $_SESSION["balance"] = 1000;
}

$result = "";
$winNumber = null;

if ($_SERVER["REQUEST_METHOD"] === "POST") {
    $bet = intval($_POST["bet"]);
    $color = $_POST["color"];

    if ($bet > 0 && $bet <= $_SESSION["balance"]) {
        $winNumber = rand(0, 36);
        $winColor = ($winNumber == 0) ? "green" : ($winNumber % 2 == 0 ? "black" : "red");

        if ($color === $winColor) {
            $_SESSION["balance"] += $bet;
            $result = "üéâ V√Ωhra! Padlo $winNumber ($winColor)";
        } else {
            $_SESSION["balance"] -= $bet;
            $result = "‚ùå Prohra! Padlo $winNumber ($winColor)";
        }
    } else {
        $result = "‚ö†Ô∏è Neplatn√° s√°zka";
    }
}
?>

